
# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<Part3Screen>:
    name: 'screen3'

    on_enter: root.setup()

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    DPEAButton: # button that makes talon servo ramp up from 0rpm to full speed over 20 seconds in equal intervals
        text: "Part 1"
        size: 800, 400
        x: root.width * 0.05
        y: root.height * 0.075
        color: 1, 0.62, 0.38, 1
        on_press: root.trying_this_other_thing(1)

    DPEAButton: # button that makes talon servo turn on at full speed clockwise, then stop 5 seconds, then full speed counterclockwise
        text: "Part 2"
        size: 800, 400
        x: root.width * 0.525
        y: root.height * 0.075
        color: 0.96, 0.6, 01.0, 1
        on_press: root.trying_this_other_thing(2)


    DPEAButton: # button that changes to main screen
        text: "Back"
        size: 200, 200
        y: root.height * 0.75
        x: root.width * 0.05
        color: 0.54, 0.54, 01.0, 1
        on_press: root.transition_back()
