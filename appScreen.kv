
# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<AppScreen>:
    name: 'new'
    positionLabel: positionLabel

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    Label:
        id: positionLabel
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        x: root.width * -0.4
        y: root.height * -0.375
        outline_width: 5
        outline_color: 0, 0, 0
        text: "test"


    DPEAButton: # button that starts the program
        id: programStart
        text: "Program"
        size: 600, 250
        x: root.width * 0.35
        y: root.height * 0.175
        color: 0.0, 0.39, 0.39, 1
        on_press: root.start_program()

    DPEAButton: # button that changes screens
        id: changeScreenBack
        text: "Back"
        size: 1175, 100
        x: root.width * 0.2
        y: root.height * 0.85
        color: 1.0, 0.29, 0.29, 1
        on_press: root.screen_transition_back()