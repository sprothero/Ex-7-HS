
# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<AppScreen>:
    name: 'new'
    positionLabel: positionLabel
    sectionLabel: sectionLabel

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    Label: # label that shows the position of motor 0
        id: positionLabel
        font_size: 100
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0.2
        y: root.height * -0.25
        outline_width: 10
        outline_color: 0, 0, 0
        text: "Position: 0.0"

    Label: # label that shows parts of program
        id: sectionLabel
        font_size: 100
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0.2
        y: root.height * -0.25
        outline_width: 10
        outline_color: 0, 0, 0
        text: "Position: 0.0"

    DPEAButton: # button that starts the program
        id: programStart
        text: "Program"
        size: 600, 300
        x: root.width * 0.075
        y: root.height * 0.1
        color: 0.0, 0.39, 0.39, 1
        on_press: root.start_program()

    DPEAButton: # button that changes screens
        id: changeScreenBack
        text: "Back"
        size: 1175, 100
        x: root.width * 0.2
        y: root.height * 0.85
        color: 1.0, 0.29, 0.29, 1
        on_press: root.screen_transition_back()