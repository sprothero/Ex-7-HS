<MainScreen>:
    name: 'main'
    startButton: startButton
    dirSwitch: dirSwitch
    speedSlider: speedSlider

    FloatLayout:
        size_hint: None, None

    Slider:
        id: speedSlider
        min: 50
        max: 1000
        step: 1
        size_hint: None, None
        size: 700, 800
        orientation: 'vertical'
        background_width: 150
        cursor_size: (3500, 3500)
        center: root.width * 0.1, root.height * 0.5
        on_touch_move: root.m_speed()

    DPEAButton:
        id: startButton
        text: "Start"
        size: 500, 300
        x: root.width * 0.55
        y: root.height * 0.5
        color: 0.43, 0.68, 0.08, 1
        on_press: root.start_control_switch()

    DPEAButton:
        id: dirSwitch
        text: "<-"
        size: 500, 300
        x: root.width * 0.2
        y: root.height * 0.5
        color: 0.0, 0.7, 0.81, 1
        on_press: root.direction_control()

