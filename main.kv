
# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<MainScreen>:
    name: 'main'
    startButton: startButton
    dirSwitch: dirSwitch
    speedSlider: speedSlider
    positionLabel: positionLabel

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    Slider: # slider that changes speed of motor 0
        id: speedSlider
        min: 50
        max: 1000
        step: 1
        size_hint: None, None
        size: 700, 800
        orientation: 'vertical'
        background_width: 150
        cursor_size: (3500, 3500)
        center: root.width * 0.1, root.height * 0.5
        on_touch_move: root.main_motor_control()

    DPEAButton: # button that toggles motor 0 on/off
        id: startButton
        text: "Start"
        size: 500, 300
        x: root.width * 0.55
        y: root.height * 0.5
        color: 0.43, 0.68, 0.08, 1
        on_press: root.start_motor()

    DPEAButton: # button that toggles direction of motor 0
        id: dirSwitch
        text: "Change"
        size: 500, 300
        x: root.width * 0.2
        y: root.height * 0.5
        color: 0.0, 0.7, 0.81, 1
        on_press: root.direction_control()

    DPEAButton: # button that starts the program
        id: programStart
        text: "Program"
        size: 600, 250
        x: root.width * 0.35
        y: root.height * 0.175
        color: 0.0, 0.39, 0.39, 1
        on_press: root.start_program()

    Label: # label that displays get_position_in_units for motor 0
        id: positionLabel
        font_size: 50
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0
        y: root.height * -0.4
        outline_width: 5
        outline_color: 0, 0, 0
        text: " "