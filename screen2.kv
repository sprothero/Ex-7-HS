
# This screen is the first cyprus exercise

# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<Part2Screen>:
    name: 'screen2'
    goSwitch: goSwitch

    on_enter: root.cyprus_setup()

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    DPEAButton: # button that shows when the switch toggles the P4 motor back and forth
        id: goSwitch
        text: "Switch"
        size: 500, 300
        x: root.width * 0.3
        y: root.height * 0.2
        color: 0.0, 0.84, 0.91, 1

    DPEAButton: # button that changes to main screen
        text: "Back"
        size: 200, 200
        y: root.height * 0.75
        x: root.width * 0.05
        color: 0.54, 0.54, 01.0, 1
        on_press: root.transition_back()
