
# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<TransitionScreen>:
    name: 'transition'
    setupLabel: setupLabel

    on_enter: root.send_to_screen()

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    Label: # label that gives instructions for setup
        id: setupLabel
        font_size: 1
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0.0
        y: root.height * 0.25
        outline_width: self.font_size * 0.1
        outline_color: 0, 0, 0
        text: " "

    DPEAButton: # button that changes to the program
        text: "Ready"
        size: 700, 400
        x: root.width * 0.325
        y: root.height * 0.1
        color: 0.66, 0.69, 1, 1
        on_press: root.screen_go()