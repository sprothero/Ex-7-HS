
# This screen is for the stepper program

# ////////////////////////////////////////////////////////////////////////////////
# ///                     Declarations and Initialization                      ///
# ////////////////////////////////////////////////////////////////////////////////

<ProgramScreen>:
    name: 'program'
    posLabel: posLabel
    proLabel: proLabel
    proStart: proStart

    FloatLayout:
        size_hint: None, None


# ////////////////////////////////////////////////////////////////////////////////
# ///                                 Widgets                                  ///
# ////////////////////////////////////////////////////////////////////////////////

    Label: # label that shows the position of motor 0
        id: posLabel
        font_size: 100
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0.2
        y: root.height * -0.25
        outline_width: 10
        outline_color: 0, 0, 0
        text: "Position: 0.0"

    Label: # label that shows parts of program
        id: proLabel
        font_size: 100
        color: 1, 1, 1, 1
        bold: True
        x: root.width * 0.0
        y: root.height * 0.1
        outline_width: 10
        outline_color: 0, 0, 0
        text: "Ready"

    DPEAButton: # button that starts the program
        id: proStart
        text: "Start"
        size: 600, 300
        x: root.width * 0.075
        y: root.height * 0.1
        color: 0.0, 0.39, 0.39, 1
        on_press: root.start_program()

    DPEAButton: # button that changes screens
        id: changeScreenBack
        text: "Back"
        size: 1175, 100
        x: root.width * 0.2
        y: root.height * 0.85
        color: 1.0, 0.29, 0.29, 1
        on_press: root.screen_transition_back()